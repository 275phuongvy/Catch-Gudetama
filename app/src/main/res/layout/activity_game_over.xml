<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".GameOverActivity">

    <ImageView
            android:layout_width="469dp"
            android:layout_height="802dp" app:srcCompat="@drawable/gameover"
            android:id="@+id/imageView14"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.501"/>
    <TextView
            android:layout_width="183dp"
            android:layout_height="77dp"
            android:id="@+id/textView" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="50dp" android:gravity="center"
            android:textSize="36sp" android:textStyle="bold" android:textColor="#FF9800" tools:text="Score: "/>
    <Button
            android:text="PLAY AGAIN"
            android:layout_width="199dp"
            android:layout_height="64dp"
            android:id="@+id/button2" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp" android:onClick="goBack"
            android:textSize="24sp" android:background="@drawable/button" android:layout_marginBottom="100dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>