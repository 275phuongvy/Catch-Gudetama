<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <android.support.v7.widget.GridLayout
            android:layout_width="398dp"
            android:layout_height="602dp" android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/timeText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="5dp" app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintVertical_bias="0.314">

        //first row
        <ImageView
                android:layout_width="130dp"
                android:layout_height="150dp"
                app:srcCompat="@drawable/gudetama"
                app:layout_row="0"
                app:layout_column="0"
                android:id="@+id/imageView1"
                android:onClick="increaseScore"/>

        <ImageView
                android:layout_width="130dp"
                android:layout_height="150dp"
                app:srcCompat="@drawable/gudetama"
                app:layout_row="0"
                app:layout_column="1"
                android:onClick="increaseScore"
                android:id="@+id/imageView2"/>

        <ImageView
                android:layout_width="130dp"
                android:layout_height="150dp"
                app:srcCompat="@drawable/gudetama"
                app:layout_row="0"
                app:layout_column="2"
                android:onClick="increaseScore"
                android:id="@+id/imageView3"/>


        //second row
        <ImageView
                android:layout_width="130dp"
                android:layout_height="150dp"
                app:srcCompat="@drawable/gudetama"
                app:layout_row="1"
                app:layout_column="0"
                android:onClick="increaseScore"
                android:id="@+id/imageView4"/>

        <ImageView
                android:layout_width="130dp"
                android:layout_height="150dp"
                app:srcCompat="@drawable/gudetama"
                app:layout_row="1"
                app:layout_column="1"
                android:onClick="increaseScore"
                android:id="@+id/imageView5"/>

        <ImageView
                android:layout_width="130dp"
                android:layout_height="150dp"
                app:srcCompat="@drawable/gudetama"
                app:layout_row="1"
                app:layout_column="2"
                android:onClick="increaseScore"
                android:id="@+id/imageView6"/>

        //third row
        <ImageView
                android:layout_width="130dp"
                android:layout_height="150dp"
                app:srcCompat="@drawable/gudetama"
                app:layout_row="2"
                app:layout_column="0"
                android:onClick="increaseScore"
                android:id="@+id/imageView7"/>

        <ImageView
                android:layout_width="130dp"
                android:layout_height="150dp"
                app:srcCompat="@drawable/gudetama"
                app:layout_row="2"
                app:layout_column="1"
                android:onClick="increaseScore"
                android:id="@+id/imageView8"/>

        <ImageView
                android:layout_width="130dp"
                android:layout_height="150dp"
                app:srcCompat="@drawable/gudetama"
                app:layout_row="2"
                app:layout_column="2"
                android:onClick="increaseScore"
                android:id="@+id/imageView9"/>

        //fourth row
        <ImageView
                android:layout_width="130dp"
                android:layout_height="150dp"
                app:srcCompat="@drawable/gudetama"
                app:layout_row="3"
                app:layout_column="0"
                android:onClick="increaseScore"
                android:id="@+id/imageView10"/>

        <ImageView
                android:layout_width="130dp"
                android:layout_height="150dp"
                app:srcCompat="@drawable/gudetama"
                app:layout_row="3"
                app:layout_column="1"
                android:onClick="increaseScore"
                android:id="@+id/imageView11"/>

        <ImageView
                android:layout_width="130dp"
                android:layout_height="150dp"
                app:srcCompat="@drawable/gudetama"
                app:layout_row="3"
                app:layout_column="2"
                android:onClick="increaseScore"
                android:id="@+id/imageView12"/>

    </android.support.v7.widget.GridLayout>
    <TextView
            android:text="Time: 20"
            android:layout_width="141dp"
            android:layout_height="54dp"
            android:id="@+id/timeText" android:gravity="center"
            android:textSize="24sp" android:textColor="#FF6F00" android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"/>
    <TextView
            android:text="Score: 0"
            android:layout_width="137dp"
            android:layout_height="53dp"
            android:id="@+id/scoreText" android:gravity="center"
            android:textSize="24sp" android:textColor="#FF6F00" android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
    />
</android.support.constraint.ConstraintLayout>